@import './normalize.css';

*{
  box-sizing: border-box;
}
*::before, *::after{
  box-sizing: border-box;
}

html
  height: 100%
  overflow: hidden;
  overflow-x: auto;
body 
  width 100vw
  height: 100vh
  // background-color rgb(64, 128, 128)
ul{
  list-style: none;
  padding: 0;
  margin: 0
}

p, h1, h2, h3{
  margin: 0
}

a{
  text-decoration:none;
  
}

button
  border none
  padding 0
  outline none

input 
  border none
  outline:none

textarea 
  outline:none
  
